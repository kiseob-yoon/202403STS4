<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ks.repository.LoginMapper">
	<select id="selectCount" resultType="Integer">
		select count(*) from member
	</select>


	<select id="selectForLogin" resultType="com.ks.dto.Member">
		<![CDATA[
		    SELECT * FROM member
    		WHERE id = #{id} AND pw = #{pw}
		
		]]>
	</select>

	<select id="selectById" resultType="com.ks.dto.Member">
	<![CDATA[
			SELECT * FROM member
			where id = #{id}	
	]]>
	</select>







</mapper>